<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register_ProfilePage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="178dp"
                android:background="#212121">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/register_profile_pic"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    app:civ_border_color="#FF0000"
                    android:padding="2dp"
                    android:src="@drawable/profile_icon_two"/>
                <ImageButton
                    android:id="@+id/register_profile_upload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/register_camera_background"
                    android:padding="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_alignRight="@id/register_profile_pic"
                    android:layout_alignBottom="@+id/register_profile_pic"
                    android:layout_alignEnd="@+id/register_profile_pic"
                    android:src="@drawable/icon_camera"/>

            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/register_username"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:hint="Username"
                android:inputType="textPersonName"
                android:textSize="21dp"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/register_city"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:hint="City"
                android:inputType="text"
                android:textSize="21dp" />



            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/register_skills"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:hint="elect expertise bellow"
                android:inputType="text"
                android:textSize="18dp" />
            <Spinner
                android:id="@+id/JobsPinner"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:entries="@array/Spinner_items"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/register_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:text="register"
                android:fontFamily="serif-monospace"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="21dp"
                android:background="@drawable/curved_corners"/>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>